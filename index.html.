        <div class="bg-white p-6 rounded-lg shadow-md flex flex-col md:flex-row gap-4 mb-10">
            <input type="text" id="topikInput" 
                class="flex-grow border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500" 
                placeholder="Masukkan topik (Contoh: Sabar)...">
            
            <button onclick="cariReferensi()" 
                class="bg-teal-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-teal-700 transition duration-300 shadow-lg">
                ğŸ” Cari Referensi
            </button>
        </div>

        <div id="hasilArea" class="hidden grid grid-cols-1 md:grid-cols-3 gap-6">
            
            <div class="bg-white p-6 rounded-xl shadow-lg border-t-4 border-green-500">
                <h3 class="font-bold text-xl mb-4 text-gray-800 flex items-center">ğŸ“š Kitab Arab</h3>
                <div id="hasilKitab" class="font-arab text-right text-2xl text-gray-700 leading-loose mb-4 bg-gray-50 p-3 rounded"></div>
