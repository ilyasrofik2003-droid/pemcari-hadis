    <script>
        function cariReferensi() {
            let topik = document.getElementById('topikInput').value;

            if (topik === "") {
                alert("Mohon masukkan topik terlebih dahulu!");
                return;
            }

            // Menghapus class 'hidden' untuk memunculkan hasil
            let area = document.getElementById('hasilArea');
            area.classList.remove('hidden');

            // Data Simulasi
            let teksArab = "ØµØ­ÙŠØ­ Ø§Ù„Ø¨Ø®Ø§Ø±ÙŠ: Ø¨Ø§Ø¨ ÙÙŠ ÙØ¶Ù„ " + topik;

            // Render Hasil
            document.getElementById('hasilKitab').innerHTML = teksArab;
            
            document.getElementById('hasilJurnal').innerHTML = `
                <p class="border-b pb-2"><strong>Jurnal Studi Islam (2023)</strong><br>Analisis Hadis tentang ${topik}</p>
                <p class="pt-2"><strong>Int. Journal of Theology</strong><br>The Concept of ${topik}</p>
            `;
            
            document.getElementById('hasilBuku').innerHTML = `
                <p class="border-b pb-2"><strong>Ensiklopedia Hadis</strong><br>Tema utama: ${topik}</p>
                <p class="pt-2"><strong>Pengantar Ilmu Hadis</strong><br>Memahami ${topik}</p>
            `;

            // Tombol Copy Modern
            let tombolHTML = `
                <button onclick="salinTeks('${teksArab}')" 
                class="w-full mt-2 bg-gray-100 text-gray-600 hover:bg-green-100 hover:text-green-700 py-2 rounded text-sm font-semibold transition flex justify-center items-center gap-2">
                ğŸ“‹ Salin Teks
                </button>`;
            document.getElementById('areaTombolCopy').innerHTML = tombolHTML;
        }

        function salinTeks(teks) {
            navigator.clipboard.writeText(teks);
            alert("Teks berhasil disalin!");
        }
    </script>
